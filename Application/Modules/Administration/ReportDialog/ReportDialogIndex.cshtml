@{
    ViewData["Title"] = Serenity.LocalText.Get("Db.EnterpriseSys.ReportDialog.EntityPlural");
}

<div id="GridDiv"></div>


<script id="Template_ReportPreivewDialog" type="text/template">
    <div class="flex-layout" id="reports">
        <div class="box">
            <div class="box-header">

            </div><!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal">
                <div class="box-body">

                    <div class="form-group" v-for="row in rows">
                        <label for="inputPassword3" class="col-sm-2 control-label">{{row.Caption}}</label>
                        <div class="col-sm-10">
                            <input type="text" v-model="row.Vue" class="form-control" id="inputPassword3">
                        </div>
                    </div>

                </div><!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right" v-on:click="OnPreview($event)">Preview</button>
                </div><!-- /.box-footer -->
            </form>
        </div>

    </div>
</script>

<script type="text/javascript">
    jQuery(function () {
        new Matrix.EnterpriseSys.ReportDialogGrid($('#GridDiv'), {}).init();
        Q.initFullHeightGridPage($('#GridDiv'));
    });
</script>

<style type="text/css">
    .form-horizontal .form-group {
        margin-right: 15px;
        margin-left: 15px;
    }
</style>